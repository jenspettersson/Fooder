<UserControl x:Class="Fooder.Views.ShellView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="450"
             Height="350">
    <StackPanel>
        <Button Command="{Binding Path=SayHelloCommand}"
                Content="Say Hello" />
        <TextBlock Text="{Binding Path=Message}"
                   FontSize="16"
                   FontWeight="Bold" />
    </StackPanel>
</UserControl>
